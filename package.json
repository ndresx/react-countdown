{
  "name": "react-countdown",
  "version": "3.0.0-beta",
  "description": "A customizable countdown component for React.",
  "main": "./dist/index.js",
  "module": "./dist/index.es.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ndresx/react-countdown.git"
  },
  "author": "Martin Veith",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ndresx/react-countdown/issues"
  },
  "homepage": "https://github.com/ndresx/react-countdown",
  "keywords": [
    "react",
    "typescript",
    "countdown",
    "component",
    "hook"
  ],
  "scripts": {
    "build": "yarn build:clean && yarn rollup --config",
    "build:clean": "rm -rf ./dist && yarn test:e2e:clean && mkdir dist",
    "build:watch": "yarn build --watch",
    "clean": "rm -rf ./node_modules && rm -rf ./coverage && yarn build:clean",
    "eslint": "eslint ./{src,examples,cypress,e2e}/**/*.{ts,tsx}",
    "eslint:fix": "yarn eslint --fix",
    "lint": "yarn lint:eslint && yarn lint:prettier && yarn lint:tsc",
    "lint:eslint": "yarn eslint",
    "lint:prettier": "yarn prettier",
    "lint:tsc": "tsc --noEmit",
    "prettier": "prettier --list-different ./{src,examples,cypress,e2e}/**/*.{ts,tsx}",
    "prettier:fix": "prettier --write ./{src,examples,cypress,e2e}/**/*.{ts,tsx}",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:e2e": "yarn build && yarn start-server-and-test test:e2e:server http://localhost:1234 \"cypress run\"",
    "test:e2e:clean": "rm -rf ./e2e/dist",
    "test:e2e:dev": "yarn start-server-and-test test:e2e:server http://localhost:1234 \"cypress open\"",
    "test:e2e:server": "parcel ./e2e/index.html --dist-dir ./e2e/dist",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "prop-types": "^15.8.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^8.57.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.0.1",
    "@typescript-eslint/parser": "^8.0.1",
    "coveralls": "^3.1.1",
    "cypress": "^13.13.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.8.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-test-renderer": "^18.3.1",
    "rollup": "^4.20.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "start-server-and-test": "^2.0.5",
    "ts-jest": "^29.2.4",
    "typescript": "^5.5.4"
  },
  "peerDependencies": {
    "react": ">= 16.8",
    "react-dom": ">= 16.8"
  }
}
